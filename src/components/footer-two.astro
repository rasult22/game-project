    <div class="my-7 h-[1px] w-full  opacity-80" />
  </div>
</footer>
<div class=" bg-[#252935]">
  <nav class="max-w-[1420px] mx-auto px-4 py-8 flex md:flex-col sm:flex-col sm:mx-0 md:mx-0 sm:items-start md:items-start items-center">
    <ul class="flex sm:flex-wrap items-center gap-6 max-w-[680px]">
      {
        navItems.map(({ title, url }) => (
          <li>
            <a class={`text-[16px] transition-all hover:opacity-80 pb-1 ${currentUrl.includes(url) ? 'border-b-2 border-[#F97C0E]' : ''}`} href={url}>
              {title}
            </a>
          </li>
        ))
      }
    </ul>
    <div class="ml-auto md:ml-0 md:mt-6 sm:mt-6 sm:ml-0 flex gap-6">
      <a class="opacity-50 hover:underline" href="#">
        Terms of use
      </a>
      <a class="opacity-50 hover:underline" href="#">
        User Agreement
      </a>
      <a class="opacity-50 hover:underline" href="#">
        Privacy policy
      </a>
    </div>
  </nav>
</div>
