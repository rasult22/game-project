---
import "@fontsource-variable/inter";
import "@fontsource/oxanium/500.css";
import "@fontsource/oxanium/600.css";
import "@fontsource/oxanium/800.css";
import "~/styles/global.css";
import Footer from "~/components/footer.astro";
import Header from "~/components/header.astro";
import Info from './info.svelte'
import {description, title} from '~/site'
import { ViewTransitions } from "astro:transitions";
const { generator, site } = Astro;
const image = new URL("optimized/social.webp", site);
---

<!doctype html>
<html
  lang="en"
  class="h-full bg-app-bg font-Inter motion-safe:scroll-smooth"
  data-theme="dark"
>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.png" type="image/svg+xml" />
    <meta name="generator" content={generator} />
    <meta
      http-equiv="cache-control"
      content="no-cache, no-store, must-revalidate"
    />
    <title>{title}</title>
    <meta name="description" content={description} />
    <ViewTransitions />
    <!-- social media -->
    <meta
      property="og:title"
      content={title}
    />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={site} />
    <meta name="twitter:card" content="summary_large_image" />
  </head><body class="overflow-x-hidden bg-[#0D0D0F] text-white">
    <Header />
    <div class="mx-auto max-w-[1376px] px-6 xl:px-0 pt-[150px] md:pt-[100px] sm:pt-[80px] md:px-0 sm:px-0">
      <div class="max-w-[1376px] mx-auto">
        <!-- banner -->
        <div
          class="h-[450px] md:h-[309px] pt-[22px] sm:h-[500px]  w-full bg-center md:rounded-none sm:rounded-none rounded-[12px] bg-[url(/optimized/ambassador-banner.webp)] sm:bg-[url(/optimized/ambassador-banner-sm.webp)] bg-cover"
        >
          <div
            class="max-w-[726px] md:max-w-[399px] py-[10px] pl-[32px] md:font-medium md:pl-[24px] relative bg-gradient-to-r from-[#FC8C24] to-[#FD4E07] font-Oxanium font-bold text-[64px] md:text-[36px] sm:hidden uppercase leading-[120%]"
          >
            <span class="z-[1] relative">
              become a Bizzon Games ambassador
            </span>
            <div class="absolute z-0 right-[-21px] -skew-x-[13deg] top-0 w-[41px] h-full bg-[#FD4E07]">
            </div>
          </div>
          <div class="mt-4 sm:hidden bg-[#F90] max-w-[692px] md:max-w-[520px] font-medium text-[32px] md:text-[24px] font-Oxanium uppercase py-[10px] pl-[36px] md:pl-[24px]">
            Promote and earn with Bizzon Games
          </div>
          <a target="_blank" class="sm:hidden" href="https://docs.google.com/forms/d/e/1FAIpQLScR_bev9Dm0kjWewJPrFGy8XadmXsLwo_mSc1qyUfeNHnryZw/viewform">
            <button class="bg-[#FFF] hover:opacity-90 ml-[32px] md:ml-[24px] md:mt-[24px] anim-btn mt-[32px] text-[#2A2A2A] py-[10px] px-[36px] w-[200px] rounded-[12px]">
              Join us
            </button>
          </a>
        </div>
        <!-- sm info of banner -->
         <div class="hidden sm:block text-[36px] sm:px-4 leading-[100%] font-medium font-Oxanium uppercase mt-[30px]">
          become a Bizzon Games ambassador
         </div>
         <div class="hidden sm:block mt-6 sm:px-4">
          Promote and earn with Bizzon Games
         </div>
         <a target="_blank" class="sm:block hidden w-full px-4" href="https://docs.google.com/forms/d/e/1FAIpQLScR_bev9Dm0kjWewJPrFGy8XadmXsLwo_mSc1qyUfeNHnryZw/viewform">
          <button class="bg-[#FFF]  w-full  anim-btn mt-[24px] text-[#2A2A2A] py-[10px] px-[36px] rounded-[12px]">
            Join us
          </button>
        </a>
      </div>
    </div>
    <section class="max-w-[912px] md:px-4 sm:px-4 mt-[100px] mx-auto mb-[200px]">
      <!-- ambassador info -->
      <Info client:load/>
    </section>
    <Footer />
  </body>
</html>
