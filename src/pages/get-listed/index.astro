---
import "@fontsource-variable/inter";
import "@fontsource/oxanium/500.css";
import "@fontsource/oxanium/600.css";
import "@fontsource/oxanium/800.css";
import "~/styles/global.css";
import Footer from "~/components/footer.astro";
import Header from "~/components/header.astro";
import GetListedForm from "./get-listed-form.svelte";
import {description, title} from '~/site'
import { ViewTransitions } from "astro:transitions";
const { generator, site } = Astro;
const image = new URL("optimized/social.webp", site);
---

<!doctype html>
<html
  lang="en"
  class="h-full bg-app-bg font-Inter motion-safe:scroll-smooth"
  data-theme="dark"
>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.png" type="image/svg+xml" />
    <meta name="generator" content={generator} />
    <meta
      http-equiv="cache-control"
      content="no-cache, no-store, must-revalidate"
    />
    <title>{title}</title>
    <meta name="description" content={description} />
    <ViewTransitions />
    <!-- social media -->
    <meta
      property="og:title"
      content={title}
    />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={site} />
    <meta name="twitter:card" content="summary_large_image" />
  </head><body class="overflow-x-hidden bg-[#0D0D0F] text-white">
    <Header />
    <div class="mx-auto max-w-[1376px] px-6 xl:px-0 pt-[150px] md:pt-[100px] sm:pt-[80px] md:px-0 sm:px-0">
      <div class="max-w-[1376px] mx-auto">
        <!-- banner -->
        <div
          class="h-[450px] md:h-[309px] pt-[22px] sm:h-[500px]  w-full bg-center md:rounded-none sm:rounded-none rounded-[12px] bg-[url(/optimized/get-listed-bg.webp)] sm:bg-[url(/optimized/get-listed-bg-sm.webp)] bg-cover"
        >
          <div
            class="max-w-[756px] py-[10px] pl-[32px] md:pl-[24px] relative font-Oxanium font-bold text-[64px] md:text-[36px] sm:text-[32px] uppercase leading-[120%]"
          >
            <span class="z-[1] block font-Inter italic app-text-gradient-bg-4 relative">
              be a part <br/>
            </span>
            <span class="z-[1] block font-Inter italic app-text-gradient-bg-4 relative">
              of our platform
            </span>
          </div>
        </div>
      </div>
    </div>
    <section class="max-w-[1376px] px-6 md:px-4 sm:px-4 mt-[60px] mx-auto mb-[200px]">
      <GetListedForm client:load />
    </section>
    <Footer />
  </body>
</html>
