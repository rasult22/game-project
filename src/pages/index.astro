---
import "@fontsource-variable/inter";
import "@fontsource/poppins";
import '~/styles/global.css'
import Footer from "~/components/footer.astro";
import Header from "~/components/header.astro";
import Buttons from '~/components/buttons.svelte'
import Search from '~/components/search.svelte'
import ButtonTab from '~/components/button-tab.svelte'
import SocialNetworks from '~/components/social-networks.svelte'
import NetworkFilter from '~/components/network-filter.svelte'
import DeviceFilter from '~/components/device-filter.svelte'
import GenreFilter from '~/components/genre-filter.svelte'
import StatusFilter from '~/components/status-filter.svelte'
const { generator, site } = Astro;
const image = new URL("optimized/social.webp", site);

const description = "AI based communication voice avatars, which can be used as different professional assistants â€“ psychologist, fitness coach, nutrition counselor, Wide range of topics communicating Companion";
---

<!doctype html>
<html lang="en" class="bg-app-bg h-full motion-safe:scroll-smooth" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.png" type="image/svg+xml" />
    <meta name="generator" content={generator} />
    <meta http-equiv="cache-control" content="no-cache, no-store, must-revalidate">
    <title>CompAI - your best AI generated friend</title>
    <meta name="description" content={description} />

    <!-- social media -->
    <meta property="og:title" content="CompAI - your best AI generated friend" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={site} />
    <meta name="twitter:card" content="summary_large_image" />
  <body
    class="h-full overflow-x-hidden bg-default text-app-grey-text text-base"
  >
    <!-- <Header /> -->
    Hello
    <div class="p-10 space-x-4 space-y-4">
      <Buttons />
      <Search />
      <div>
        <ButtonTab client:load />
      </div>
      <SocialNetworks />
      <div>
        <NetworkFilter client:load/>
      </div>
      <div >
        <DeviceFilter client:load/>
      </div>
      <div >
        <GenreFilter client:load/>
      </div>
      <div >
        <StatusFilter client:load/>
      </div>
    </div>
    <Footer />
  </body>
</html>

